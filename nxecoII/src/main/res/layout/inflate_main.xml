<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/main">
     <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:background="@drawable/nxeco_logo_x" />

        <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/forecast"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgd_left" >

                <TextView
                    android:id="@+id/forecast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="16dp"
                    android:text="Today&apos;s Forecast"
                    android:textColor="@color/white"
                    android:textSize="20px" />

                <ImageView
                    android:id="@+id/forecast_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/weather_scatteredclouds_day" />

                <TextView
                    android:id="@+id/forecast_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="75dp"
                    android:layout_toRightOf="@id/forecast_image"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:layout_toRightOf="@id/forecast_text"
                    android:text="Â°F"
                    android:textColor="@color/white"
                    android:textSize="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/adjustment"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgd_center" >

                <TextView
                    android:id="@+id/adjustment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="16dp"
                    android:text="Raining"
                    android:textColor="@color/white"
                    android:textSize="20px" />

                <ImageView
                    android:id="@+id/adjustment_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="81dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/icon_wateringconsumption1" />

                <TextView
                    android:id="@+id/adjustment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="75dp"
                    android:layout_toRightOf="@id/adjustment_image"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:layout_toRightOf="@id/adjustment_text"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rate"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgd_right" >

                <TextView
                    android:id="@+id/rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="16dp"
                    android:text="Watering Adjustment"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                
                <ImageView
                    android:id="@+id/rate_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/icon_et" />

                <TextView
                    android:id="@+id/rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rate_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_toRightOf="@id/rate_text"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </RelativeLayout>

        </LinearLayout>
    

</RelativeLayout>
