<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
     
    <TextView
        android:id="@+id/weather1_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
      
        android:layout_marginTop="83dp"
        android:background="@drawable/date_back"
        android:gravity="center"
        android:text="Today"
        android:textColor="@color/white"
        android:textSize="20px" />

    <TextView
        android:id="@+id/weather1_temp_text"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_below="@id/weather1_week_text"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="96-71.6Â°F"
        android:textColor="@color/white"
        android:textSize="20px" />

    <ImageView
        android:id="@+id/weather1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather1_temp_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/weather_scatteredclouds_day" />

    <LinearLayout
        android:id="@+id/raining_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather1_image"
        android:layout_marginLeft="42dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/weather1_raining_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/raining" />

        <TextView
            android:id="@+id/weather1_raining_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="33"
            android:textColor="@color/white"
            android:textSize="20px" />

        <TextView
            android:id="@+id/weather1_raining_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="16px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/humidity_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/raining_view"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/weather1_humidity_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/humidity" />

        <TextView
            android:id="@+id/weather1_humidity_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="20px" />

        <TextView
            android:id="@+id/weather1_humidity_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="16px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adjust_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity_view"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/weather1_adjust_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/adjust" />

        <TextView
            android:id="@+id/weather1_adjust_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="150"
            android:textColor="@color/white"
            android:textSize="20px" />

        <TextView
            android:id="@+id/weather1_adjust_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="16px" />
    </LinearLayout>
    <View android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_marginRight="818dp"
        android:layout_alignParentRight="true"
     	android:background="@drawable/dividing_line"
        />

</RelativeLayout>