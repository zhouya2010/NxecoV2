<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="135dp"
    android:layout_marginTop="80dp" >

    <TextView 
        android:id="@+id/construction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/construction"
        android:layout_marginTop="50dp"
        android:textColor="@color/settings_title"
        android:textSize="24sp"
        />
    
    <TextView 
        android:id="@+id/devid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/construction"
        android:layout_marginTop="20dp"
        android:textColor="@color/settings_menu"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/ver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/devid_text"
        android:layout_marginTop="20dp"
        android:textColor="@color/settings_menu"
        android:textSize="20sp"
        />
    
    
    
</RelativeLayout>