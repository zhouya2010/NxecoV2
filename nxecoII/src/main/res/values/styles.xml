<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    
     <style name="Theme.Trans"  parent="android:style/Theme.Translucent">
        <!-- 窗体背景半透明 -->
        <item name = "android:windowBackground">@color/transparent</item>
        <!--除去title-->
        <item name="android:windowNoTitle">true</item>
    </style>
    
     
     <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/store_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/store_push_bottom_out</item>
    </style>
     
      <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    
     <style name="program_name">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
         <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="program_layout">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">195dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@xml/program_select</item>
    </style>

    <style name="program_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">52dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="sch_btn">
        <item name="android:layout_width">199dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@xml/sch_btn_select</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="watering_btn">
        <item name="android:layout_width">248dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@xml/sch_btn_select</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>
